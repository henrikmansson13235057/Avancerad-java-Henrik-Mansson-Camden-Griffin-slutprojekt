<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.ToDoListController">
    <TextField fx:id="taskInput" promptText="Enter task name" />
    <Button fx:id="addButton" text="Add Task" />
    <Button fx:id="deleteButton" text="Delete Task" />
    <Button fx:id="updateButton" text="Update Task" />
    <ListView fx:id="taskListView" />
</VBox>
