<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javax.swing.table.TableColumn?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.forntendtodolist2.HelloController" spacing="10" alignment="CENTER">
  <TableView fx:id="taskTable" prefWidth="600" prefHeight="300">
    <columns>
      <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
      <TableColumn fx:id="completedColumn" text="Completed" prefWidth="100"/>
      <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="150"/>
    </columns>
  </TableView>
  <HBox spacing="10">
    <TextField fx:id="nameField" promptText="Task Name"/>
    <DatePicker fx:id="dueDatePicker"/>
    <CheckBox fx:id="completedCheckBox" text="Completed"/>
  </HBox>
  <HBox spacing="10">
    <Button text="Add Task" onAction="#addTask"/>
    <Button text="Delete Task" onAction="#deleteTask"/>
  </HBox>
</VBox>

